{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "npm run docker:smart-start",
        "dev:local": "vite",
        "docker:start": "docker-compose up",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:build": "docker-compose up --build -d",
        "docker:restart": "npm run docker:down && npm run docker:build",
        "docker:smart-start": "npm run docker:check-and-start && npm run docker:logs",
        "docker:check-and-start": "bash docker/scripts/smart-start.sh",
        "docker:status": "bash docker/scripts/status.sh",
        "docker:setup": "npm run docker:env && npm run docker:up && npm run docker:wait && npm run docker:key && npm run docker:migrate",
        "docker:env": "bash -c \"[ ! -f .env ] && cp docker/env-example .env || echo '.env already exists'\"",
        "docker:wait": "timeout /t 15 /nobreak >nul",
        "docker:wait-ready": "bash docker/scripts/wait-ready.sh",
        "docker:key": "docker-compose exec php php artisan key:generate",
        "docker:key-smart": "bash docker/scripts/check-key.sh",
        "docker:migrate": "docker-compose exec php php artisan migrate",
        "docker:seed": "docker-compose exec php php artisan db:seed",
        "docker:fresh": "docker-compose exec php php artisan migrate:fresh --seed",
        "docker:artisan": "docker-compose exec php php artisan",
        "docker:composer": "docker-compose exec php composer",
        "docker:shell": "docker-compose exec php bash",
        "docker:logs": "docker-compose logs -f",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "types": "tsc --noEmit"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@types/node": "^22.13.5",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "typescript-eslint": "^8.23.0"
    },
    "dependencies": {
        "@headlessui/react": "^2.2.0",
        "@inertiajs/react": "^2.0.0",
        "@radix-ui/react-avatar": "^1.1.3",
        "@radix-ui/react-checkbox": "^1.1.4",
        "@radix-ui/react-collapsible": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-label": "^2.1.2",
        "@radix-ui/react-navigation-menu": "^1.2.5",
        "@radix-ui/react-select": "^2.1.6",
        "@radix-ui/react-separator": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.2",
        "@radix-ui/react-toggle": "^1.1.2",
        "@radix-ui/react-toggle-group": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.8",
        "@tailwindcss/vite": "^4.0.6",
        "@types/react": "^19.0.3",
        "@types/react-dom": "^19.0.2",
        "@vitejs/plugin-react": "^4.3.4",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.0.1",
        "globals": "^15.14.0",
        "laravel-vite-plugin": "^1.0",
        "lucide-react": "^0.475.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tailwind-merge": "^3.0.1",
        "tailwindcss": "^4.0.0",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.7.2",
        "vite": "^6.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    }
}
